<section>
  <p><a href="/dashboard">Return to Dashboard</a></p>

  <h3 class="text-align-center new-post">Edit your post</h3>

  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">

      <form class="edit-form">
        <label for="post-title ">Post Name:</label>
        <input
          type="text"
          class="form-control"
          name="post-name"
          value="{{post.title}}"
          required
        />
        <label for="post-content">Post Content:</label>
        <input
          type="text"
          class="form-control"
          name="post-content"
          value="{{post.post_content}}"
        />
        <input type="hidden" name="{{post.id}}" />
        <div class="text-right">
          Created on
          {{new_date post.createdAt}}
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <button
          type="button"
          class="btn btn-danger"
          id="delete-post"
        >Delete</button>
      </form>
    </div>
    <div class="col-3"></div>
  </div>

</section>

<script src="/js/edit-post.js"></script>
<script src="/js/deletepost.js"></script>